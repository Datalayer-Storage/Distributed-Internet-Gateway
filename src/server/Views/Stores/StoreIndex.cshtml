@namespace dig
@using System.Globalization

@model StoreIndex
@{
    Layout = "_Layout";
}

<h1 class="text-break">Index of @Model.Store.verified_name
    @if (@Model.Store.is_verified)
    {
        <span class="text-success ms-2"><i class="bi bi-check-lg"></i></span>
    }
</h1>
<h3 class="text-break">@Model.Store.singleton_id</h3>

@if (!Model.Keys.Any())
{
    <div class="ms-2 me-auto">
        <div class="fw-bold">This store is empty</div>
    </div>
}

<cache enabled="true" expires-after="@TimeSpan.FromMinutes(15)">
    <div class="list-group list-group-numbered">
        @foreach (var key in Model.Keys)
        {
            <div class="container list-group-item list-group-item-action d-flex align-items-start">
                &nbsp;<a class="stretched-link" href="/@Model.Store.singleton_id/@key">@key</a>
            </div>
        }
    </div>
</cache>
